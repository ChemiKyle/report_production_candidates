    "links" : {
        "control-center": [
            {
                "name": "Production Candidates Report",
                "icon": "report",
                "url": "report.php"
            }
        ]
    },
    "system-settings": [
        {
            "key": "goprod_version",
            "name": "Go Prod Version",
            "required": true,
            "type": "radio",
            "choices": [
                {
                    "value": "go_prod",
                    "name": "go_prod"
                },
                {
                    "value": "goprod_v2.0",
                    "name": "goprod_v2.0"
                }
            ]
        },
        {
            "key": "rpc_cc",
            "name": "CC address",
            "required": false,
            "type": "text",
            "repeatable": true
        },
        {
            "key": "rpc_subject",
            "name": "Subject",
            "required": false,
            "type": "text",
            "repeatable": false
        },
        {
            "key": "rpc_body",
            "name": "Body",
            "required": false,
            "type": "textarea",
            "repeatable": false
        }
    ],
    "crons": [
        {
            "cron_name": "report_production_candidates_cron",
            "cron_description": "Cron that runs daily to update the redcap_project_stats table",
            "method": "report_production_candidates_cron",
            "cron_frequency": "86400",
            "cron_max_run_time": "1200"
        }
    ],
    "compatibility": {
        "redcap-version-min": "8.0.3",
        "redcap-version-max": ""
   }
}
